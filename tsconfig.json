{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "types": [ "node", "jest" ],
        "target": "es2017",
        "lib": [
            "es5", "es6", "es7",
            "es2015", "es2016",
            "es2017", "es2018",
            "esnext"
        ],
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "rootDirs": ["."],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "packages/**/*"
    ]
}
